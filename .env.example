# Environment Configuration
NODE_ENV=development

# Port Configuration - Single Source of Truth
PORT=3000
VITE_PORT=5173

# Database Configuration
MONGO_INITDB_ROOT_USERNAME=bodadmin
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password_here
MONGO_INITDB_DATABASE=bracket_of_death


# Keycloak Configuration (Internal service communication)
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password_here
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=your_keycloak_db_password_here
KEYCLOAK_REALM=bracketofdeathsite
KEYCLOAK_CLIENT_ID=bod-app
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here
KEYCLOAK_URL=http://keycloak:8080


# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Mailjet Configuration
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_API_SECRET=your_mailjet_api_secret
MAILJET_SENDER_EMAIL=your_sender_email

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:5173,http://frontend:5173

# Frontend Configuration (Browser URLs via proxy)
VITE_API_URL=/api
VITE_KEYCLOAK_URL=/auth

VITE_ALLOWED_HOSTS=localhost